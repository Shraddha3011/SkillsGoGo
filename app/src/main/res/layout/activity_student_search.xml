<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StudentSearch"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Search"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/authoret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:layout_marginTop="16dp"
        android:hint="Search by Author"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/search_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search" />

    <EditText
        android:id="@+id/courseet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/authoret"
        android:layout_marginTop="16dp"
        android:hint="Search by Course Title"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search" />

    <EditText
        android:id="@+id/categoryet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseet"
        android:layout_marginTop="16dp"
        android:hint="Search by Category"
        android:minHeight="48dp" />


    <Button
        android:id="@+id/search_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search" />

</LinearLayout>
