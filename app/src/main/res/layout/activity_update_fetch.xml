<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateFetch"
    android:orientation="vertical"
    android:background="@color/black">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Name"
        android:inputType="text"
        android:padding="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/addcourse_bg"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Description"
        android:inputType="text"
        android:padding="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/addcourse_bg"/>


    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author Name"
        android:inputType="text"
        android:padding="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:fontFamily=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/addcourse_bg"/>



    <EditText
        android:id="@+id/tutorial"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/addcourse_bg"
        android:hint="Course Content"
        android:inputType="text"
        android:paddingLeft="17dp"
        android:paddingBottom="17dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/addpdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add pdf"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"/>

    <Button
        android:id="@+id/addque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Quiz"
        android:padding="17dp"
        android:layout_margin="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/add_quiz"
        />

    <Button
        android:id="@+id/submitcourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"
        android:minHeight="48dp"
        android:onClick="go"
        android:text="Update Course" />


</LinearLayout>